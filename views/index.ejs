<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-600">

        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md px-5 py-2 bg-zinc-800"
                       type="text"
                       placeholder="Title goes here" name="title">

                <textarea class="block mt-2 w-full rounded-md px-5 py-2 resize-none bg-zinc-800"
                          placeholder="Description goes here" name="details"></textarea>

                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md"
                       type="submit"
                       value="create task">
            </form>
        </div>

        <div class="tasks p-10 flex gap-4 flex-wrap">
            
            <% if (files.length > 0) { %>

                <% files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter">
                            <%=val %>
                        </h1>

                        <p class="text-white mt-2">
                            
                        </p>
                        <div class="flex w-full justify-between mt-3">
                             <a class="text-blue-500 hover:underline inline-block " href="/file/<%=val%>">
                            READ
                        </a>
                            <a class="text-zinc-600 hover:underline inline-block mt-3" href="/edit/<%=val%>">
                                EDIT
                            </a>
                        </div>
                       
                    </div>
                <% }) %>

            <% } else { %>

                <h1 class="text-zinc-300">No task yet</h1>

            <% } %>

        </div>
    </div>
</body>
</html>
